{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "royal-blue",
          "color": "#14375d",
          "name": "Royal Blue"
        },
        {
          "slug": "burgundy",
          "color": "#8b1538",
          "name": "Burgundy"
        },
        {
          "slug": "gold",
          "color": "#d4af37",
          "name": "Gold"
        },
        {
          "slug": "cream",
          "color": "#f5f1e8",
          "name": "Cream"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "dark-gray",
          "color": "#2c2c2c",
          "name": "Dark Gray"
        },
        {
          "slug": "body-bg",
          "color": "#fafafa",
          "name": "Body Background"
        },
        {
          "slug": "text-primary",
          "color": "#2c2c2c",
          "name": "Primary Text"
        },
        {
          "slug": "text-secondary",
          "color": "#555555",
          "name": "Secondary Text"
        },
        {
          "slug": "text-light",
          "color": "#666666",
          "name": "Light Text"
        },
        {
          "slug": "text-muted",
          "color": "#999999",
          "name": "Muted Text"
        }
      ],
      "custom": true,
      "customGradient": true
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'DM Serif Text', serif",
          "slug": "dm-serif-text",
          "name": "DM Serif Text"
        },
        {
          "fontFamily": "'Libre Baskerville', serif",
          "slug": "libre-baskerville",
          "name": "Libre Baskerville"
        },
        {
          "fontFamily": "'Lato', sans-serif",
          "slug": "lato",
          "name": "Lato"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.125rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.25rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "1.5rem",
          "name": "Extra Extra Large"
        },
        {
          "slug": "xxx-large",
          "size": "2rem",
          "name": "Huge"
        }
      ],
      "customFontSize": true
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "customSpacingSize": true,
      "spacingSizes": [
        {
          "slug": "20",
          "size": "0.44rem",
          "name": "1"
        },
        {
          "slug": "30", 
          "size": "0.67rem",
          "name": "2"
        },
        {
          "slug": "40",
          "size": "1rem", 
          "name": "3"
        },
        {
          "slug": "50",
          "size": "1.5rem",
          "name": "4"
        },
        {
          "slug": "60",
          "size": "2.25rem",
          "name": "5"
        },
        {
          "slug": "70",
          "size": "3.38rem",
          "name": "6"
        },
        {
          "slug": "80",
          "size": "5.06rem",
          "name": "7"
        }
      ]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--body-bg)",
      "text": "var(--wp--preset--color--text-primary)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lato)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.7"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--dm-serif-text)",
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "fontWeight": "400",
          "lineHeight": "1.2"
        },
        "color": {
          "text": "var(--wp--preset--color--royal-blue)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-baskerville)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "400",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-baskerville)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "400",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-baskerville)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "700",
          "lineHeight": "1.4"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--royal-blue)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--burgundy)"
          }
        }
      }
    },
    "blocks": {
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--dm-serif-text)",
          "fontSize": "1.8rem",
          "fontWeight": "400",
          "letterSpacing": "1px"
        },
        "color": {
          "text": "var(--wp--preset--color--royal-blue)"
        }
      },
      "core/navigation": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--lato)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}